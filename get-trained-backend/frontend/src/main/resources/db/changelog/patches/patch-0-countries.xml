<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

  <changeSet id="1" author="Volodymyr Dotsenko">
    <comment>Country UA</comment>

    <insert tableName="LOCAL_COUNTRIES">
      <column name="CODE">UA</column>
      <column name="PHONE_CODE">+380</column>
    </insert>

    <insert tableName="LOCAL_COUNTRY_LOCALS">
      <column name="COUNTRY_CODE">UA</column>
      <column name="LANG_CODE">UA</column>
      <column name="NAME">Україна</column>
    </insert>

    <insert tableName="LOCAL_COUNTRY_LOCALS">
      <column name="COUNTRY_CODE">UA</column>
      <column name="LANG_CODE">RU</column>
      <column name="NAME">Украина</column>
    </insert>

    <insert tableName="LOCAL_COUNTRY_LOCALS">
      <column name="COUNTRY_CODE">UA</column>
      <column name="LANG_CODE">EN</column>
      <column name="NAME">Ukraine</column>
    </insert>
  </changeSet>

  <changeSet id="2" author="Volodymyr Dotsenko">
    <comment>Country PL</comment>

    <insert tableName="LOCAL_COUNTRIES">
      <column name="CODE">PL</column>
      <column name="PHONE_CODE">+48</column>
    </insert>

    <insert tableName="LOCAL_COUNTRY_LOCALS">
      <column name="COUNTRY_CODE">PL</column>
      <column name="LANG_CODE">PL</column>
      <column name="NAME">Polska</column>
    </insert>

    <insert tableName="LOCAL_COUNTRY_LOCALS">
      <column name="COUNTRY_CODE">PL</column>
      <column name="LANG_CODE">UA</column>
      <column name="NAME">Польща</column>
    </insert>

    <insert tableName="LOCAL_COUNTRY_LOCALS">
      <column name="COUNTRY_CODE">PL</column>
      <column name="LANG_CODE">RU</column>
      <column name="NAME">Польша</column>
    </insert>

    <insert tableName="LOCAL_COUNTRY_LOCALS">
      <column name="COUNTRY_CODE">PL</column>
      <column name="LANG_CODE">EN</column>
      <column name="NAME">Poland</column>
    </insert>
  </changeSet>
</databaseChangeLog>
