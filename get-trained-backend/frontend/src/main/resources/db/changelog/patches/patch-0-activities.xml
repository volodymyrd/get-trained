  <changeSet id="1" author="Volodymyr Dotsenko">
    <comment>Activities</comment>

    <insert tableName="ACT_ACTIVITIES">
      <column name="ID">-1</column>
      <column name="DATE_CREATE" valueDate="${now}"/>
